{
  "name": "yahtzee-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "cd server && node index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "deploy": "npm run build && npm run deploy:railway",
    "deploy:railway": "railway up",
    "start:production": "npm run build && npm run server:install && npm run server:start",
    "server:install": "cd server && npm install",
    "server:start": "cd server && npm start",
    "test:dice": "npx tsc -p src/scripts/tsconfig.json && node dist/scripts/scripts/testDiceRandomness.js",
    "test:dice:compare": "node tests/dice-randomness/compare-implementations.mjs",
    "test:dice:game": "node tests/dice-randomness/test-game-dice.mjs"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.22.3",
    "socket.io-client": "^4.7.5",
    "uuid": "^9.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "globals": "^15.1.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.5"
  }
}
